<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dolar.Views.SeleccionarMoneda"
             Title="Seleccionar Moneda">
    <StackLayout Padding="10">
        <ListView x:Name="MonedaListView" ItemSelected="OnMonedaSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Image Source="{Binding FlagImage}" WidthRequest="50" HeightRequest="50"/>
                            <Label Text="{Binding Nombre}" FontSize="20" VerticalOptions="Center" Margin="10,0,0,0"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
